<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PasswordRecoveryActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_height="327dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/forgetpassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text=" Forget Password ?"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="No worries, we'll send you reset instructions."
        android:layout_gravity="center"
        android:textSize="16dp"
        />


    <EditText
        android:id="@+id/passwordRecoveryEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="textEmailAddress"
        android:hint="Enter email"
        android:paddingHorizontal="15dp"
       />

    <Button
        android:id="@+id/passwordRecoverybtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="Submit"
        android:backgroundTint="@color/maroon"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
</LinearLayout>